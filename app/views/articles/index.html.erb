<h1>Articles</h1>

<%= link_to 'New Article', new_article_path %>

<% @articles.each do |article| %>
  <h4><%= link_to article.title, article_path(id: article.id) %></h4>
  <p>Written By: <%= link_to article.user.username, user_path(username: article.user.username) %></p>
  <%= truncate article.body %>
<% end %>
